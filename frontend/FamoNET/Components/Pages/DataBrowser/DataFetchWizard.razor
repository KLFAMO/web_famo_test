<EditForm class="row" Model="this" OnSubmit="@FetchData" FormName="FetchWizard">
    <div class=" my-2 col-auto">
        <select class="form-select" aria-label="Choose data" disabled=@IsUIDisabled @bind="@SelectedTableName">
            <option selected>Choose data</option>
            @foreach(var tableName in TableNames)
            {
                <option value="@tableName">@tableName</option>
            }            
        </select>
    </div>

    <div class="d-flex ms-2">
        <label class="col-form-label my-2" for="title">Start MJD</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@StartMjd" id="title" required />
        </div>
    </div>

    <div class="d-flex ms-2">
        <label class="col-form-label" for="title">End MJD</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@EndMjd" id="title" required />
        </div>
    </div>

    <button type="submit" class="col-auto btn btn-primary my-2" disabled=@IsUIDisabled>Fetch data</button>
</EditForm>

@code {
    private bool IsUIDisabled = false;

    public void ToggleUI() => IsUIDisabled = !IsUIDisabled;
}


