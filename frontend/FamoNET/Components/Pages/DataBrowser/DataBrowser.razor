<DataFetchWizard @ref="DataFetchWizardComponent" DataReceived="OnDataReceived" />

<div chartContainer class="my-2">
    @if(IsFetchingData)
    {
        <div class="spinner-border" role="status">
            <span class="sr-only"></span>
        </div>
    }    
    <div id="chartElement" style="height: 500px; width: 100%;">
</div>

<ChartWizard ChartParametersUpdated="@OnChartParametersUpdate" @ref="ChartWizardComponent" />

<PythonConsole QueryExecuted="OnPythonConsoleExecute" @ref="PythonConsoleComponent" />
</div>
