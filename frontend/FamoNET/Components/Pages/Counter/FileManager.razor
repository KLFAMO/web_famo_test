<table class="table">
    <thead>
        <tr>
            <th scope="col">Filename</th>
            <th scope="col">Status</th>            
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var file in Files)
        {
            <tr>
                <td>@file.Name</td>
                <td>@(file.Status == Model.Enums.FileStatus.Completed ? "Completed" : "In Progress")</td>
                <td><button class="btn btn-primary my-2" type="button" disabled="@(file.Status == Model.Enums.FileStatus.InProgress ? "true" : "")" @onclick="(() => DownloadFile(file))">Download</button></td>
            </tr>
        }        
    </tbody>
</table>