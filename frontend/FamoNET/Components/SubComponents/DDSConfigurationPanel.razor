@if (DDS_Model != null)
{    
    <div class="box">
        <nav class="level">
            <!-- Left side -->
            <div class="level-left">
                <div class="level-item">
                    <h1 class="title">@(_operation == Model.Operation.Create ? "Create" : "Edit")</h1>
                </div>
            </div>

            <!-- Right side -->
            <div class="level-right">
                <button class="button is-danger" type="button" @onclick=OnDeleteClicked>
                    <span class="icon">
                        <i class="fa fa-trash"></i>
                    </span>
                </button>
            </div>
        </nav>

        <div class="field is-horizontal">
            <div class="field-label">
                <label class="label">IP</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" readonly @bind="DDS_Model.IP">
                    </div>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label">
                <label class="label">Name</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" readonly @bind="DDS_Model.Name">
                    </div>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label">
                <label class="label">Description</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" type="text" readonly @bind="DDS_Model.Description">
                    </div>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label">
            </div>
            <div class="field-body">
                <div class="block">
                    <button class="button" type="button" @onclick=AddChannel>
                        <span class="icon">
                            <i class="fa fa-plus"></i>
                        </span>
                    </button>
                </div>
                <div class="block">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Channel</th>
                                <th>Amplitude</th>
                                <th>Phase</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var channel in DDS_Model.Channels)
                            {
                                <tr>
                                    <td>@channel.Id</td>
                                    <td>
                                        <input type="text" class="input" @bind="channel.Name" />
                                    </td>
                                    <td>
                                        <input type="number" class="input" @bind="channel.Amplitude" />
                                    </td>
                                    <td>
                                        <input type="number" class="input" @bind="channel.Phase" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>                
            </div>
        </div>
        <div class="columns is-centered">
            <div class="column is-half has-text-centered">
                <button class="button is-link" type="button" @onclick="(e) => OnSendClicked()">Save</button>
            </div>
        </div>
    </div>

    <ConfirmModal @ref=ConfirmModalComponent ChoiceMade="OnModalConfirmed" />
}